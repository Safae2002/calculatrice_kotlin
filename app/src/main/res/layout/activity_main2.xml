<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity2"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:layout_gravity="start"
            app:navigationIcon="@drawable/baseline_menu_24"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView

                android:id="@+id/input1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="30dp"
                tools:text="5+3-5"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/output1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="50dp"
                android:textColor="@color/green"
                tools:text="3"
                />
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/inverse"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="1/x"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/expo"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="e"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/absolu"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="|x|"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/supp"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="sup"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

            </TableRow>
            <TableRow>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sin"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="sin"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cos"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="cos"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tan"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="tan"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/log"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="log"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

            </TableRow>
            <TableRow>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ln"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="ln"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/X"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="x!"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/carry"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="x^n"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sqrt"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="sqrt"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

            </TableRow>
            <TableRow>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/MC1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="MC"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/MR1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="MR"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mLeft1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="M+"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mRight1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="M-"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

            </TableRow>
            <TableRow>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/C1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="C"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/modulo1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="%"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fois1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="X"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/division1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="/"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />


            </TableRow>
            <TableRow>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_71"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="7"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_81"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="8"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_91"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="9"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/moin1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="-"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />


            </TableRow>
            <TableRow>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_41"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="4"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_51"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="5"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_61"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="6"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/plus1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="+"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />


            </TableRow>
            <TableRow>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_11"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="1"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_21"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="2"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_31"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="3"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/egale1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="="
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />


            </TableRow>
            <TableRow>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_01"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="0"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pareLeft1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="("
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pareRight1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text=")"
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/virgulr1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text=","
                    style="@style/Button_style"
                    android:layout_margin="5dp"
                    />

            </TableRow>



        </TableLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>