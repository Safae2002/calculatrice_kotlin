<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bouton normal -->
    <item android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="10dp" /> <!-- Rayon des coins du bouton -->
        </shape>
    </item>

    <!-- Bouton enfoncé -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Couleur de fond lorsqu'il est enfoncé -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Bouton avec le focus (survol) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gris" /> <!-- Couleur de fond en survol -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
